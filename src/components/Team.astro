---
// src/components/Team.astro
interface TeamMember {
  name: string;
  role: string;
  image: string;
  experience: string;
  specialties: string[];
  social?: {
    instagram?: string;
    facebook?: string;
    twitter?: string;
  };
}

const teamMembers: TeamMember[] = [
  {
    name: "Carlos Rodríguez",
    role: "Barbero Principal",
    image: "/images/team/carlos.jpg",
    experience: "12+ años",
    specialties: ["Cortes clásicos", "Barbas", "Fade moderno"],
    social: {
      instagram: "@carlos_barber",
      facebook: "carlos.barber.rz"
    }
  },
  {
    name: "Miguel Torres",
    role: "Especialista en Barbas",
    image: "/images/team/miguel.jpg",
    experience: "8+ años",
    specialties: ["Diseño de barba", "Afeitado clásico", "Cuidado facial"],
    social: {
      instagram: "@miguel_beardmaster",
      twitter: "@miguel_torres_b"
    }
  },
  {
    name: "Alejandro Silva",
    role: "Barbero Estilista",
    image: "/images/team/alejandro.jpg",
    experience: "6+ años",
    specialties: ["Cortes modernos", "Coloración", "Estilismo"],
    social: {
      instagram: "@alejo_styles",
      facebook: "alejandro.silva.styles"
    }
  },
  {
    name: "David Mendoza",
    role: "Aprendiz Senior",
    image: "/images/team/david.jpg",
    experience: "3+ años",
    specialties: ["Cortes básicos", "Arreglo de barba", "Atención al cliente"],
    social: {
      instagram: "@david_barber_ap"
    }
  }
];
---

<section id="team" class="py-20 bg-gradient-to-b from-gray-900 to-gray-950 relative overflow-hidden">
  <!-- Elementos decorativos -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-10 w-40 h-40 bg-amber-500 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-32 h-32 bg-blue-500 rounded-full blur-3xl"></div>
    <div class="absolute top-1/3 right-1/4 w-28 h-28 bg-purple-500 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <!-- Encabezado -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 text-amber-500 mb-4">
        <div class="w-8 h-px bg-amber-500"></div>
        <span class="text-sm font-semibold tracking-widest uppercase">Nuestro Equipo</span>
        <div class="w-8 h-px bg-amber-500"></div>
      </div>
      <h2 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-amber-400 to-amber-600 bg-clip-text text-transparent">
        Conoce al Equipo
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Expertos apasionados por el arte de la barbería. Cada miembro de nuestro equipo 
        combina <span class="text-amber-400 font-semibold">tradición y modernidad</span> para ofrecerte el mejor servicio.
      </p>
    </div>

    <!-- Grid del equipo -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      {teamMembers.map((member, index) => (
        <div 
          class="group relative bg-gray-800/50 backdrop-blur-sm rounded-2xl overflow-hidden border border-gray-700/50 hover:border-amber-500/30 transition-all duration-500 hover:transform hover:scale-105 hover:shadow-2xl hover:shadow-amber-500/10"
          data-member-index={index}
        >
          <!-- Imagen del miembro -->
          <div class="relative overflow-hidden aspect-[3/4]">
            <img
              src={member.image}
              alt={`${member.name} - ${member.role}`}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
              loading="lazy"
            />
            <!-- Overlay de experiencia -->
            <div class="absolute top-4 right-4 bg-amber-500 text-gray-900 px-3 py-1 rounded-full text-sm font-bold shadow-lg">
              {member.experience}
            </div>
            <!-- Gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-60"></div>
          </div>

          <!-- Información del miembro -->
          <div class="p-6">
            <h3 class="text-xl text-white mb-2 group-hover:text-amber-400 transition-colors">
              {member.name}
            </h3>
            <p class="text-amber-500 font-semibold mb-4">{member.role}</p>
            
            <!-- Especialidades -->
            <div class="mb-4">
              <p class="text-sm text-gray-400 mb-2 font-semibold">Especialidades:</p>
              <div class="flex flex-wrap gap-2">
                {member.specialties.map((specialty) => (
                  <span class="bg-gray-700/50 text-gray-300 px-2 py-1 rounded-lg text-xs border border-gray-600/50">
                    {specialty}
                  </span>
                ))}
              </div>
            </div>

            <!-- Redes sociales -->
            {member.social && (
              <div class="flex gap-3 pt-4 border-t border-gray-700/50">
                {member.social.instagram && (
                  <a 
                    href={`https://instagram.com/${member.social.instagram.replace('@', '')}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-pink-500 transition-colors duration-300 transform hover:scale-110"
                    aria-label={`Instagram de ${member.name}`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  </a>
                )}
                {member.social.facebook && (
                  <a 
                    href={`https://facebook.com/${member.social.facebook}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-blue-500 transition-colors duration-300 transform hover:scale-110"
                    aria-label={`Facebook de ${member.name}`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>
                )}
                {member.social.twitter && (
                  <a 
                    href={`https://twitter.com/${member.social.twitter.replace('@', '')}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-blue-400 transition-colors duration-300 transform hover:scale-110"
                    aria-label={`Twitter de ${member.name}`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  </a>
                )}
              </div>
            )}
          </div>

          <!-- Efecto de brillo al hover -->
          <div class="absolute inset-0 bg-gradient-to-r from-amber-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-2xl"></div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center">
      <div class="bg-gradient-to-r from-amber-500/10 to-blue-500/10 rounded-2xl p-8 border border-amber-500/20">
        <h3 class="text-2xl md:text-3xl  text-white mb-4">
          ¿Listo para tu próxima experiencia de barbería?
        </h3>
        <p class="text-gray-300 mb-6 max-w-2xl mx-auto">
          Nuestro equipo está listo para brindarte el mejor servicio. 
          Agenda tu cita y descubre por qué somos la barbería de confianza.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#contact"
            class="bg-amber-500 hover:bg-amber-600 text-white px-8 py-3 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-amber-500/25"
          >
            Agendar Cita
          </a>
          <a
            href="tel:+1234567890"
            class="border border-amber-500 text-amber-400 hover:bg-amber-500 hover:text-white px-8 py-3 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105"
          >
            Llamar Ahora
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* Animaciones personalizadas */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.team-member {
  animation: fadeInUp 0.6s ease-out forwards;
}

.team-member:nth-child(1) { animation-delay: 0.1s; }
.team-member:nth-child(2) { animation-delay: 0.2s; }
.team-member:nth-child(3) { animation-delay: 0.3s; }
.team-member:nth-child(4) { animation-delay: 0.4s; }

/* Mejoras de imagen */
img {
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
}

/* Efectos de hover mejorados */
.group:hover .group-hover\:scale-105 {
  transform: scale(1.05);
}
</style>