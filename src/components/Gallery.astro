          </svg>
          @tuberberia
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Modal -->
<div id="galleryModal" class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/95 backdrop-blur-sm hidden">
  <div class="relative max-w-6xl max-h-[90vh] w-full">
    <!-- Botón cerrar -->
    <button 
      id="closeModal"
      class="absolute top-4 right-4 z-20 bg-gray-800/80 hover:bg-gray-700 text-white p-3 rounded-full transition-all duration-300 transform hover:scale-110 hover:rotate-90"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- Botones navegación -->
    <button 
      id="prevImage"
      class="absolute left-4 top-1/2 transform -translate-y-1/2 z-20 bg-gray-800/80 hover:bg-gray-700 text-white p-4 rounded-full transition-all duration-300 hover:scale-110"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </button>

    <button 
      id="nextImage"
      class="absolute right-4 top-1/2 transform -translate-y-1/2 z-20 bg-gray-800/80 hover:bg-gray-700 text-white p-4 rounded-full transition-all duration-300 hover:scale-110"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </button>

    <!-- Imagen en modal -->
    <div class="flex items-center justify-center h-full">
      <img
        id="modalImage"
        src=""
        alt=""
        class="max-w-full max-h-[80vh] object-contain rounded-2xl shadow-2xl transition-transform duration-500"
      />
    </div>

    <!-- Indicadores -->
    <div id="modalIndicators" class="absolute bottom-4 left-1/2 transform -translate-x-1/2 z-20 flex gap-2">
      <!-- Los indicadores se generan dinámicamente -->
    </div>

    <!-- Contador -->
    <div id="modalCounter" class="absolute top-4 left-4 z-20 bg-gray-800/80 text-white px-3 py-2 rounded-lg text-sm font-semibold">
      1 / {images.length}
    </div>
  </div>
</div>

<script is:inline>
// JavaScript para el modal - is:inline para que esté disponible globalmente
document.addEventListener('DOMContentLoaded', function() {
  const images = [
    "/images/gallery-1.jpg",
    "/images/gallery-2.jpg",
    "/images/gallery-3.jpg",
    "/images/gallery-4.jpg",
    "/images/gallery-5.jpg",
    "/images/gallery-6.jpg",
    "/images/gallery-7.jpg",
    "/images/gallery-8.jpg",
  ];

  let indiceImagenActual = 0;

  // Elementos del DOM
  const galleryGrid = document.getElementById('galleryGrid');
  const modal = document.getElementById('galleryModal');
  const modalImage = document.getElementById('modalImage');
  const modalCounter = document.getElementById('modalCounter');
  const closeModal = document.getElementById('closeModal');
  const prevImage = document.getElementById('prevImage');
  const nextImage = document.getElementById('nextImage');

  // Event listeners para las imágenes de la galería
  if (galleryGrid) {
    galleryGrid.addEventListener('click', function(e) {
      const galleryItem = e.target.closest('.gallery-item');
      if (galleryItem) {
        const index = parseInt(galleryItem.getAttribute('data-index'));
        abrirModal(index);
      }
    });
  }

  // Funciones del modal
  function abrirModal(index) {
    indiceImagenActual = index;
    modalImage.src = images[index];
    modalImage.alt = `Trabajo de barbería ${index + 1}`;
    modalCounter.textContent = `${index + 1} / ${images.length}`;
    
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    
    actualizarIndicadores();
  }

  function cerrarModal() {
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  function imagenSiguiente() {
    indiceImagenActual = (indiceImagenActual + 1) % images.length;
    actualizarModal();
  }

  function imagenAnterior() {
    indiceImagenActual = (indiceImagenActual - 1 + images.length) % images.length;
    actualizarModal();
  }

  function actualizarModal() {
    modalImage.src = images[indiceImagenActual];
    modalImage.alt = `Trabajo de barbería ${indiceImagenActual + 1}`;
    modalCounter.textContent = `${indiceImagenActual + 1} / ${images.length}`;
    
    actualizarIndicadores();
  }

  function actualizarIndicadores() {
    const container = document.getElementById('modalIndicators');
    if (!container) return;
    
    container.innerHTML = '';
    
    images.forEach((_, index) => {
      const dot = document.createElement('div');
      dot.className = `w-3 h-3 rounded-full transition-all duration-300 ${
        index === indiceImagenActual ? 'bg-amber-500 scale-125' : 'bg-gray-500'
      }`;
      container.appendChild(dot);
    });
  }

  // Event listeners para los controles del modal
  if (closeModal) closeModal.addEventListener('click', cerrarModal);
  if (prevImage) prevImage.addEventListener('click', imagenAnterior);
  if (nextImage) nextImage.addEventListener('click', imagenSiguiente);

  // Event listener para teclado
  document.addEventListener('keydown', (event) => {
    if (modal.classList.contains('hidden')) return;
    
    if (event.key === 'Escape') cerrarModal();
    if (event.key === 'ArrowRight') imagenSiguiente();
    if (event.key === 'ArrowLeft') imagenAnterior();
  });

  // Inicializar indicadores
  actualizarIndicadores();
});
</script>

<style>
/* Tus estilos CSS aquí (los mismos que antes) */
.animate-fadeIn {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

html {
  scroll-behavior: smooth;
}

img {
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
}

#galleryModal {
  transition: opacity 0.3s ease;
}

#galleryModal.hidden {
  opacity: 0;
  pointer-events: none;
}

#galleryModal:not(.hidden) {
  opacity: 1;
}
</style>